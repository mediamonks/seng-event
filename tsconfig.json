{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src/",
    "rootDir": "./src/",
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017"
    ]
  },
  "include": [
    "./src/**/*",
    "./types/**/*.d.ts"
  ]
}
